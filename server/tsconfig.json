{
   "compilerOptions": {
      "target": "es2016",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "baseUrl": "./src",
      "outDir": "dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
   },
   "include": ["src/**/*"]
}
